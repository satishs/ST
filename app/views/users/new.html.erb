<div id="display">
  <h3>Become a Member</h3>

  <% form_for(@user) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :fullname, "Full name" %>(required)<br />
      <%= f.text_field :fullname %>
    </p>
    <p>
      <%= f.label :email %>(required)<br />
      <%= f.text_field :email %>
    </p>
     <p>
      <%= f.label :username %>(optional) <br />
      <%= f.text_field :username %>
    </p>
    <p>
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </p>
    <p>
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %>
    </p>
    <p>
      <%= f.submit 'Submit' %>
    </p>
  <% end %>
  
</div>
